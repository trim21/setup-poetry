{
  "name": "setup-python-poetry",
  "version": "2.0.5",
  "private": true,
  "description": "install poetry in on your OS",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --ext ts,js ./",
    "format": "prettier -w .",
    "build": "npx esbuild --bundle --platform=node --legal-comments=external --sourcemap=inline --target=node16 ./src/main.ts --outfile=dist/index.js",
    "test": "jest",
    "prepare": "husky install"
  },
  "license": "MIT",
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": "^20.0.0"
  },
  "dependencies": {
    "@actions/cache": "3.2.4",
    "@actions/core": "1.10.1",
    "@actions/exec": "1.1.1",
    "@actions/http-client": "2.2.1",
    "@renovatebot/pep440": "3.0.20",
    "source-map-support": "0.5.21"
  },
  "lint-staged": {
    "*.{js,ts,yaml,md,yml,json}": "prettier -w"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/node": "20.13.0",
    "@types/source-map-support": "0.5.10",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "esbuild": "0.21.4",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.5.0",
    "eslint-plugin-n": "17.7.0",
    "eslint-plugin-promise": "6.2.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "jest-circus": "29.7.0",
    "lint-staged": "15.2.5",
    "prettier": "3.2.5",
    "ts-jest": "29.1.4",
    "typescript": "5.5.2"
  }
}
